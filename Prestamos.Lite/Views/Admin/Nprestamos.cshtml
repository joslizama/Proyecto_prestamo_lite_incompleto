    <!-- Page Content -->
    <!--Tabs-->
    <br />
    <form method="post" enctype="multipart/form-data" id="Validar_prestamos">
        <table align="center" class="border">

            <tr>
                <td colspan="4" align="center"><center><h6>Nuevo prestamo</h6></center></td>
            </tr>

            <tr>
                <td><label for="formGroupExampleInput">Tipo de moneda del prestamo : </label></td>
                <td>



                    <select class="form-control" id="tmoneda" name="tmoneda" required>
                        <option value="null">Seleccione</option>
                        @foreach (var i in TempData["lmoneda"] as List<Prestamos.Lite.Models.Tipo_moneda>)
                        {
                            <option value="@i.id">@i.nombre_divisa</option>
                        }

                    </select>

                </td>

                <td><label for="formGroupExampleInput">Tipo de pago prestamo : </label></td>
                <td>
                    <select class="form-control" id="tpago" name="tpago" required>
                        <option value="null">Seleccione</option>
                        @foreach (var i in TempData["lpago"] as List<Prestamos.Lite.Models.Tipo_pago>)
                        {
                            <option value="@i.id">@i.nombre</option>
                        }
                    </select>

                </td>


            </tr>
            <tr>
                <td><label for="formGroupExampleInput">Monto del prestamo : </label></td>
                <td><input type="text" class="form-control" id="monto" name="monto" required></td>
                <td><label for="formGroupExampleInput">Numero de cuotas : </label></td>
                <td><input type="text" class="form-control" id="cuotas" name="cuotas" required></td>



            </tr>


            <tr>
                <td><label for="formGroupExampleInput">Fecha de inicio del pago : </label></td>
                <td><input type="date" class="form-control" id="fechainicio" name="fechainicio" required></td>
                <td><label for="formGroupExampleInput">Fecha fin del pago : </label></td>
                <td><input type="date" class="form-control" id="fechafin" name="fechafin"  required></td>



            </tr>

            <tr>
                <td><label for="formGroupExampleInput">Interes : </label></td>
                <td><input type="text" class="form-control" id="interes" name="interes" value="0.19" disabled></td>
                <td><label for="formGroupExampleInput">Monto de cuotas sin interes : </label></td>
                <td><input type="text" class="form-control" id="mcuotassininteres" name="mcuotassininteres" readonly onclick="llenar()" required></td>



            </tr>
            <tr>
                <td><label for="formGroupExampleInput">Monto de cuotas con interes : </label></td>
                <td><input type="text" class="form-control" id="mcuotasconinteres" name="mcuotasconinteres"  required></td>
                <td><label for="formGroupExampleInput">Total del prestamo : </label></td>
                <td><input type="text" class="form-control" id="total" name="total"  required></td>


            </tr>
            <tr>
                <td><label for="formGroupExampleInput">Rut cliente : </label></td>
                <td><input type="text" class="form-control" id="rcliente" name="rcliente" required></td>
                <td><label for="formGroupExampleInput">Clausulas : </label></td>
                <td><textarea class="form-control" id="clausulas" name="clausulas" rows="3" required></textarea></td>


            </tr>
            <tr>
                <td colspan="4" align="center">

                    <button type="submit" name="Nuevo" id="Nuevo" value="Nuevo" class="btn btn-primary">Nuevo</button>
                    &nbsp;
                    <button type="reset" name="Cancelar" id="Cancelar" value="Cancelar" class="btn btn-danger">Cancelar</button>

                </td>


            </tr>




        </table>
    </form>















    <!-- Bootstrap core JavaScript -->
    <script src="vendor/jquery/jquery.slim.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>
</html>
